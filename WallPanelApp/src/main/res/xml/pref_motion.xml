<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <PreferenceCategory android:title="@string/pref_motion_detection_title">

        <SwitchPreference
            android:key="@string/key_setting_camera_motionenabled"
            android:title="@string/title_setting_camera_motionenabled"
            android:summary="Detects motion using the device's camera."/>

        <SwitchPreference
            android:defaultValue="@string/default_setting_camera_motionwake"
            android:key="@string/key_setting_camera_motionwake"
            android:title="@string/title_setting_camera_motionwake"
            android:summary="Wakes the device screen when motion detected."
            android:dependency="@string/key_setting_camera_motionenabled"/>

        <SwitchPreference
            android:defaultValue="@string/default_setting_camera_motionbright"
            android:key="@string/key_setting_camera_motionbright"
            android:title="@string/title_setting_camera_motionbright"
            android:summary="Increases the screen brightness when motion detected."
            android:dependency="@string/key_setting_camera_motionenabled"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_motion_adjustments_title">

        <!--   <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="@string/default_setting_camera_motionontime"
            android:inputType="number"
            android:key="@string/key_setting_camera_motionontime"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/title_setting_camera_motionontime"
            android:dependency="@string/key_setting_camera_motionenabled"
            android:paddingBottom="0dp"
            tools:summary="20"/>-->

        <EditTextPreference
            android:defaultValue="@string/default_setting_camera_motionleniency"
            android:hint="Cookies"
            android:inputType="number"
            android:key="@string/key_setting_camera_motionleniency"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:contentDescription="Kittens"
            android:title="@string/title_setting_camera_motionleniency"
            android:dependency="@string/key_setting_camera_motionenabled"/>

        <EditTextPreference
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:selectable="false"
            android:paddingTop="0dp"
            android:summary="The maximum tolerance of the difference between images. A lower tolerance means motion is more sensitive (1-20)."/>

        <EditTextPreference
            android:defaultValue="@string/default_setting_camera_motionminluma"
            android:inputType="number"
            android:key="@string/key_setting_camera_motionminluma"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/title_setting_camera_motionminluma"
            android:dependency="@string/key_setting_camera_motionenabled"/>

        <EditTextPreference
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:selectable="false"
            android:paddingTop="0dp"
            android:summary="Minimum brightness level to detect motion. No motion will be detected if brightness falls below this value (1 - 1000)."/>

    </PreferenceCategory>

</PreferenceScreen>